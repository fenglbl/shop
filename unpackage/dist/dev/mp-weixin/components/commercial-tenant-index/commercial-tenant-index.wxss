.commercial-tenant-index .nav-bar {
    width: 100%;
    height: 80rpx;
    box-shadow: 0 2rpx 10rpx 0 #c8c7cc;
    position: relative;
}
.commercial-tenant-index .nav-bar .nav-bar-content {
      height: 80rpx;
      z-index: 999;
      width: 100%;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      position: fixed;
      background-color: #ffffff;
}
.commercial-tenant-index .nav-bar .nav-bar-content .near-shop {
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        font-size: 22rpx;
        margin-left: 20rpx;
}
.commercial-tenant-index .nav-bar .nav-bar-content .search {
        background-color: #f8f8f8;
        color: #999;
        margin: 0 20rpx;
        -webkit-box-flex: 1;
        -webkit-flex: 1;
                flex: 1;
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        padding: 8rpx;
        border-radius: 30rpx;
        -webkit-box-pack: center;
        -webkit-justify-content: center;
                justify-content: center;
        font-size: 22rpx;
}
.commercial-tenant-index .type-bar {
    width: 100%;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
            flex-wrap: wrap;
}
