.detail .swiper {
  height: 600rpx;
}
.detail .swiper .swiper-item {
    position: relative;
}
.detail .swiper .swiper-item .image {
      width: 100%;
      height: 100%;
}
.detail .swiper .swiper-item .page {
      font-size: 24rpx;
      position: absolute;
      bottom: 30rpx;
      right: 30rpx;
      background-color: #f8f8f8;
      padding: 5rpx 20rpx;
      border-radius: 24rpx;
      color: #333;
}
.detail .detail-desc {
  padding: 20rpx;
}
.detail .detail-desc .title, .detail .detail-desc .price {
    font-size: 28rpx;
    margin: 10rpx 0;
    font-weight: 600;
}
.detail .detail-desc .price {
    color: #eb4d4b;
}
.detail .detail-desc .spec, .detail .detail-desc .end {
    font-size: 26rpx;
    color: #333;
    margin: 10rpx 0;
}
.detail .detail-desc .end {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
}
.detail .share {
  font-size: 20rpx;
  background-color: #ffeeee;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 20rpx;
  position: relative;
}
.detail .share .icon {
    border: 1rpx solid #eb4d4b;
    color: #eb4d4b;
    font-size: 18rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    padding-right: 6rpx;
    margin-right: 12rpx;
    border-radius: 6rpx;
}
.detail .share .icon .pic {
      background-color: #eb4d4b;
      padding: 0 8rpx;
      border-top-right-radius: 12rpx;
      border-bottom-right-radius: 12rpx;
      margin-right: 8rpx;
}
.detail .share .icon .pic .image {
        width: 20rpx;
        height: 20rpx;
}
.detail .share .btn {
    position: absolute;
    right: 100rpx;
    background-color: #eb4d4b;
    color: #fff;
    padding: 4rpx 8rpx;
    top: 50%;
    margin-top: -18rpx;
    border-radius: 8rpx;
}
.detail .content {
  padding: 10rpx;
}
.detail .content .title {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
    font-size: 26rpx;
}
.detail .content .title .border {
      width: 160rpx;
      height: 1rpx;
      background-color: rgba(0, 0, 0, 0.4);
      -webkit-transform: scale(0.6);
              transform: scale(0.6);
}
.detail .content .matter {
    padding-top: 26rpx;
}
.detail .footer-bar {
  position: fixed;
  bottom: 20rpx;
  left: 50%;
  margin-left: -47vw;
  height: 80rpx;
  z-index: 999;
  width: 94%;
  background-color: #f1f1f1;
  border-radius: 15rpx;
  box-shadow: 0 0rpx 14rpx 4rpx #c8c7cc;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}

